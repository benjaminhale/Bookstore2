@model Book 

<div class="card card-outline-primary m-1 p-1 text-white">
    <div class="bg-dark p-1">
        <h4>
            Title: @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <p>
                    Author: @Model.AuthorFirst
                    @if (Model.AuthorMiddle != " ")
                    {
                        @Model.AuthorMiddle
                    }
                    @Model.AuthorLast
                </p>
            </span>
        </h4>
        <p>ISBN: @Model.ISBN</p>
        <div class="card-text p-1">
            <p>Publisher: @Model.Publisher</p>
        </div>
        <p class="text-danger">Classification: @Model.Classification</p>
        <p class="text-warning">Category: @Model.Category</p>
        <p class="text-muted">Price: $@Model.Price</p>
        <p>Pages: @Model.NumPages</p>
    </div>

    <form id="@Model.BookId" asp-page="/Shopping" method="post">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Buy
            </button>
        </span>
    </form>

</div>